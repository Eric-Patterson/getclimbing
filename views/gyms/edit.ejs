    <% layout('layouts/boilerplate') %> 


<div class="row">
    <h1 class="text-center">Edit Gyms</h1>
    <div class="col-6 offset-3">
        <!-- offset-3, means middle when we have col-6 -->
    
        <form action="/gyms/<%=gym._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="gym[title]" placeholder="Title" value="<%=gym.title  %>" required> 
                <div class="invalid-feedback">
                    Please enter a title.
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="gym[location]" placeholder="Location" value="<%= gym.location %>" required>
                <div class="invalid-feedback">
                    Please enter a location.
                  </div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Add more image(s)...</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
              </div>
            <div class="mb-3">
            
                <label class="form-label" for="price">Gym Price</label>
                <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="gym[price]" value="<%= gym.price %>" required>
                <div class="invalid-feedback">
                    Please list a price.
                  </div>
              </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="gym[description]" placeholder="Description" required><%= gym.description %> </textarea>
                <div class="invalid-feedback">
                    Please add a description.
                  </div>
            </div>
            <div class="mb-3">
                <% gym.images.forEach(function(img, i) { %> 
                    <img class="img-thumbnail"src="<%= img.thumbnail %>" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>"> 
                    </div>
                    <label for="image-<%=i%>">Delete?</label>
                    <% }) %> 
            </div>
            <div class="mb-3">
            <button class="btn btn-info">Update Gym</button>
        </div>
        </form>
        <a href="/gyms/<%=gym._id %> ">Back to Gyms</a>
    
    </div>
</div>
